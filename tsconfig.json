{
  "compilerOptions": {
    "target": "ES2021",                                  
    "module": "ES2022",
    "baseUrl": "./",                    
    "paths": {
      "@/*": ["./src/*"]
    },     
    "moduleResolution": "node",                    
    "types": ["bun-types"],
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "noImplicitAny": false,                  
  },
  "include": ["src/**/*", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
